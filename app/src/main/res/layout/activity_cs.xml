<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.salarioza.salarioza_quiz1.CS">

    <TextView
        android:id="@+id/cstitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bachelor of Science in Computer Science (4 years)"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true"
        android:textStyle="italic"
        android:textColor="#FFFF00"
        android:textSize="22dp"
        android:layout_marginLeft="40dp"
        android:textAllCaps="true"/>
    <TextView
        android:id="@+id/csdes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cstitle"
        android:textStyle="italic"
        android:text="Level I accredited by the Philippine Accrediting Association of Schools, Colleges, and Universities"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:textColor="#000"
        android:textSize="19dp"
        />
    <TextView
        android:id="@+id/csdes2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Students under the BS Computer Science program are highly trained for software and system development. The programâ€™s main focus is to expose the students to different approaches and styles in developing programs whether they are procedural or the object oriented type of system approach."
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/csdes"
        android:textColor="#000"
        android:textSize="18dp"
        />
    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:layout_below="@+id/csdes2"
        android:layout_alignLeft="@+id/csdes2"
        android:layout_alignStart="@+id/csdes2"
        android:layout_marginTop="47dp"
        android:onClick="GoToMain"
        android:textColor="#000"
        android:textSize="18dp"/>
    <Button
        android:id="@+id/IT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IT"
        android:layout_alignBaseline="@+id/IS"
        android:layout_alignBottom="@+id/IS"
        android:layout_centerHorizontal="true"
        android:onClick="GoToIT"
        android:textColor="#32CD32"
        android:textSize="18dp"/>
    <Button
        android:id="@+id/IS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IS"
        android:layout_alignBaseline="@+id/home"
        android:layout_alignBottom="@+id/home"
        android:layout_alignRight="@+id/csdes2"
        android:layout_alignEnd="@+id/csdes2"
        android:onClick="GoToIS"
        android:textSize="18dp"
        android:textColor="#FF7F50"/>
</RelativeLayout>